@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model NewsPortal.ViewModels.NewsCreateEditViewModel

<h2>@Localizer["EditNews"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>@Localizer["Title"]</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>@Localizer["Subtitle"]</label>
        <input asp-for="Subtitle" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>@Localizer["Image"]</label>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" width="150" class="mb-2" />
        }
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>@Localizer["Body"]</label>
        <textarea asp-for="Body" rows="6" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>
