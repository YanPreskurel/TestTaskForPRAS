@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model NewsPortal.Models.News

@{
    var translation = Model.Translations.FirstOrDefault();
    if (translation == null)
    {
        <p>@Localizer["TranslationNotFound"]</p>
        return;
    }
}

<div class="card mb-4 shadow-sm">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="card-img-top" style="max-height: 400px; object-fit: cover;" />
    }

    <div class="card-body">
        <h2>@translation.Title</h2>

        @if (!string.IsNullOrEmpty(translation.Subtitle))
        {
            <h5 class="text-muted">@translation.Subtitle</h5>
        }

        <p class="mt-3">@Html.Raw(translation.Body)</p>

        <p class="text-muted">
            <small>@Localizer["Published"]: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-2">
            @Localizer["BackToHome"]
        </a>

        <a asp-controller="News" asp-action="Index" class="btn btn-secondary mt-2">
            @Localizer["BackToList"]
        </a>
    </div>
</div>
